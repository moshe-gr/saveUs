<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <solid android:color="@color/login_background" />
            <stroke
                android:color="#dddedb"
                android:width="1dp"/>
            <corners android:radius="0dp" />
        </shape>
    </item>

    <item>
        <rotate
            android:fromDegrees="-60"
            android:toDegrees="60"
            android:pivotX="60%"
            android:pivotY="-170%">
            <shape>
                <solid android:color="@color/login_background"/>
                <stroke
                    android:color="#dddedb"
                    android:width="1dp"/>
            </shape>
        </rotate>
    </item>

    <item>
        <rotate
            android:fromDegrees="60"
            android:toDegrees="-60"
            android:pivotX="0%"
            android:pivotY="200%">
            <shape>
                <solid android:color="@color/login_background"/>
                <stroke
                    android:color="#dddedb"
                    android:width="1dp"/>
            </shape>
        </rotate>
    </item>

</layer-list>