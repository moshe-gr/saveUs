<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8"
    android:background="@color/login_background"
    tools:context=".fragments.NotificationsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:fontFamily="@font/assistant"
        android:gravity="center"
        android:background="@color/add_place"
        android:layout_weight="1"
        android:text="@string/my_notifications_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.166"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginVertical="16dp"
        android:layoutDirection="rtl">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/my_place_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/assistant_light"
                android:textColor="@color/date_button"
                android:textSize="15sp"
                android:text="@string/num_sick"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/no_data"
                android:textSize="30sp"
                android:fontFamily="@font/assistant"
                android:textColor="@color/turquoise"
                android:textAlignment="center"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/my_place_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/assistant_light"
                android:textColor="@color/date_button"
                android:textSize="15sp"
                android:text="@string/num_recover"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/no_data"
                android:textSize="30sp"
                android:fontFamily="@font/assistant"
                android:textColor="@color/show_my_places"
                android:textAlignment="center"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/my_place_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/assistant_light"
                android:textColor="@color/date_button"
                android:textSize="15sp"
                android:text="@string/num_dead"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/no_data"
                android:textSize="30sp"
                android:fontFamily="@font/assistant"
                android:textColor="@color/add_place"
                android:textAlignment="center"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.333"
        android:background="@color/white"
        android:elevation="4dp"
        android:layout_marginHorizontal="16dp"
        android:shadowColor="#40000000"
        android:textColor="@color/add_place"
        android:textSize="16sp"
        android:text="@string/notification"
        android:paddingHorizontal="20dp"
        android:paddingVertical="8dp"
        android:fontFamily="@font/assistant_bold"/>

</LinearLayout>